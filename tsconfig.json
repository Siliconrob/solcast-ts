{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]    
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}